	<Grid BackgroundColor="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>

		<StackLayout
			Grid.Row="0"
			Margin="0,10,0,0"
			HorizontalOptions="Center"
			Orientation="Horizontal">
			<Image
				Margin="0,3,0,3"
				Opacity="0.6"
				Source="mauiapp.png"
				VerticalOptions="Start" />
		</StackLayout>

		<Grid Grid.Row="1" Margin="20,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
				<RowDefinition Height="50" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="40" />
				<RowDefinition Height="40" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Image
				HeightRequest="70"
				Source="girl48.png"
				VerticalOptions="EndAndExpand" />

			<Entry
				Grid.Row="1"
				FontSize="16"
				Placeholder="Email ou Telefone"
				PlaceholderColor="LightBlue" />
			<Entry
				Grid.Row="2"
				FontSize="16"
				Placeholder="Senha"
				PlaceholderColor="LightBlue" />
			<Button
				Grid.Row="3"
				BackgroundColor="CornflowerBlue"
				HeightRequest="50"
				Text="Login"
				TextColor="White"
				VerticalOptions="Start" />
			<Label
				Grid.Row="4"
				Margin="0,10"
				FontSize="12"
				HorizontalOptions="Center"
				Text="Problemas no Login ?" />

			<Grid Grid.Row="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label
					BackgroundColor="LightBlue"
					HeightRequest="1"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" />
				<Image
					Grid.Column="1"
					Margin="10,0"
					Source="facebook.png"
					VerticalOptions="Center" />
				<Label
					Grid.Column="2"
					BackgroundColor="LightBlue"
					HeightRequest="1"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Center" />
			</Grid>

			<StackLayout
				Grid.Row="6"
				HorizontalOptions="CenterAndExpand"
				Orientation="Horizontal">
				<Label Text="Login com facebook" TextColor="CornflowerBlue" />
			</StackLayout>
		</Grid>
		<StackLayout Grid.Row="2" BackgroundColor="AliceBlue">
			<Label HeightRequest="1" TextColor="CornflowerBlue" />
			<Label
				HorizontalTextAlignment="Center"
				Text="NÃ£o possui Conta ? Registre-se."
				VerticalOptions="FillAndExpand"
				VerticalTextAlignment="Center" />
		</StackLayout>
	</Grid>
</ContentPage>